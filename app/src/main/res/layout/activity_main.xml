<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--<com.example.colortiles.TilesView
        android:id="@+id/tilesview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>-->

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="visible"
        android:background="@drawable/main_background">

        <Button
            android:layout_width="190dip"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:onClick="ClickPlay"
            android:text="ИГРАТЬ"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:background="@color/colorAccent"
            android:layout_margin="15dp" />

        <Button
            android:id="@+id/rules"
            android:layout_width="160dip"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:onClick="ClickRule"
            android:text="правила"
            android:textSize="11dp"
            android:background="@color/bright"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rule1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="invisible"
        android:background="#2E8B57"
        android:onClick="next_rule1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Меняйте цвет плитки и её соседей"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="34dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rule1"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rule2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="visible"
        android:background="#2E8B57"
        android:onClick="next_rule2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Цвета меняются в указанном порядке"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="34dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rule2"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>